{
    "name": "WebChat AI Assistant",
    "version": "1.0",
    "description": "Chat with AI about any webpage using advanced retrieval and memory",
    "manifest_version": 3,
    "action": {
        "default_popup": "popup.html",
        "default_icon": "logo.png"
    },
    "icons": {
        "128": "logo.png"
    },
    "permissions": [
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "http://localhost:8000/*"
    ]
}